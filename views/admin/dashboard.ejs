<section class="reveal">
  <h1>Dashboard</h1>
  <canvas id="chart" height="110"></canvas>
</section>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const labels = <%- JSON.stringify(labels||[]) %>;
  const visitors = <%- JSON.stringify(visitors||[]) %>;
  const pageviews = <%- JSON.stringify(pageviews||[]) %>;
  const adClicks = <%- JSON.stringify(adClicks||[]) %>;
  new Chart(document.getElementById('chart'), {
    type: 'line',
    data: { labels, datasets: [
      { label:'Visitors', data:visitors, tension:.35 },
      { label:'Pageviews', data:pageviews, tension:.35 },
      { label:'Ad Clicks', data:adClicks, tension:.35 }
    ]},
    options:{ plugins:{ legend:{display:true}}, scales:{ y:{ beginAtZero:true } } }
  });
</script>
