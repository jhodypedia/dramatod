<section class="reveal">
  <h1>Pengaturan</h1>
  <form method="post" class="form grid2">
    <label>Nama Situs<input name="siteName" value="<%= s.siteName||'' %>"/></label>
    <label>Logo URL<input name="logoUrl" value="<%= s.logoUrl||'' %>"/></label>
    <label>Tema
      <select name="theme">
        <option value="dark" <%= s.theme==='dark'?'selected':'' %>>Dark</option>
        <option value="light" <%= s.theme==='light'?'selected':'' %>>Light</option>
      </select>
    </label>
    <label>AdSense Head Script<textarea name="adsHeadScript"><%= s.adsHeadScript||'' %></textarea></label>
    <label>Ads Body Top<textarea name="adsBodyTop"><%= s.adsBodyTop||'' %></textarea></label>
    <label>Ads Overlay Player (HTML)<textarea name="adsPlayerOverlayHtml"><%= s.adsPlayerOverlayHtml||'' %></textarea></label>
    <button class="btn primary">Simpan</button>
  </form>
</section>
